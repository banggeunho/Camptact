<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- 폰트설정 -->
        <item name="android:textViewStyle"> @style/customFontStyle</item>
        <item name="android:buttonStyle"> @style/customFontStyle</item>
        <item name="android:buttonStyleToggle"> @style/customFontStyle</item>
    </style>

    <!-- 폰트 설정 -->
    <style name="customFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/b210</item>
    </style>
</resources>
